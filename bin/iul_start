#!/bin/bash
PORT=8151
APP_NAME="Rights Management Database (TEST)"
PID_FILE=/srv/services/rmd-devel-8151/tmp/pids/server.pid

echo "Starting $APP_NAME on port $PORT"

if [ -e $PID_FILE ]; then
    echo "$PID_FILE found! - $APP_NAME appears to already be running."
    echo "Exiting without starting $APP_NAME"
    exit 1
fi

if RAILS_ENV=test rails s -b 0.0.0.0 -p $PORT -d; then
    echo "Starting $APP_NAME on port $PORT"
fi
