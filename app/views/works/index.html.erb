<%= link_to 'New Work', new_work_path %>
<p id="notice"><%= notice %></p>
<h1>Listing Works</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <th>Title</th>
    <th>Access Determination</th>
    <th>Traditional</th>
    <th>Contemporary Work in Copyright</th>
    <th>Restored Copyright</th>
    <th>Alternative Titles</th>
    <th>Publication Date</th>
    <th>Enters Public Domain</th>
    <th>Authority Source</th>
    <th>Authority Source URL</th>
  </tr>
  <% @works.each do |work| %>
      <tr>
        <td><%= work.title %></td>
        <td><%= work.access_determination %></td>
        <td><%= work.traditional? ? 'Yes':'No' %></td>
        <td><%= work.contemporary_work_in_copyright? ? 'Yes':'No' %></td>
        <td><%= work.restored_copyright? ? 'Yes':'No' %></td>
        <td><%= work.alternative_titles %></td>
        <td><%= work.publication_date %></td>
        <td><%= work.copyright_end_date %></td>
        <td><%= work.authority_source %></td>
        <td><%= link_to "#{work.authority_source_url}", work.authority_source_url, target: '_blank' unless work.authority_source_url.blank? %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


