<header class="rvt-header" role="banner">
  <a class="rvt-skip-link" href="#main-content">Skip to content</a>
  <div class="rvt-header__trident">
    <svg class="rvt-header__trident-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 41 48" aria-describedby="iu-logo" aria-hidden="true">
      <title id="iu-logo">Indiana University Logo</title>
      <rect width="41" height="48" fill="#900"></rect>
      <polygon points="24.59 12.64 24.59 14.98 26.34 14.98 26.34 27.78 22.84 27.78 22.84 10.9 24.59 10.9 24.59 8.57 16.41 8.57 16.41 10.9 18.16 10.9 18.16 27.78 14.66 27.78 14.66 14.98 16.41 14.98 16.41 12.64 8.22 12.64 8.22 14.98 9.97 14.98 9.97 30.03 12.77 33.02 18.16 33.02 18.16 36.52 16.41 36.52 16.41 39.43 24.59 39.43 24.59 36.52 22.84 36.52 22.84 33.02 28 33.02 31.01 30.03 31.01 14.98 32.78 14.98 32.78 12.64 24.59 12.64" fill="#fff"></polygon>
    </svg>
  </div>
  <span class="rvt-header__title">
      <a href="/">Rights Management Database</a>
    </span>
  <div class="rvt-header__controls">
    <nav class="rvt-header__main-nav" role="navigation">
      <ul>
        <li>
          <%= form_tag(search_path, method: :get)  do %>
            <div class="rvt-input-group">
              <%= text_field_tag :search, params[:search], {id: "search_input", class: "rvt-input-group__input", type: "text"} %>
              <div class="rvt-input-group__append">
                <button id="search_button" class="rvt-button">Search</button>
              </div>
            </div>
          <% end %>
        </li>
        <li>
          <% if controller_name == 'nav' && action_name == 'start' %>
            <%= link_to "Home", root_path, "aria-current":"page" %>
          <% else %>
            <%= link_to "Home", root_path %>
          <% end %>
        </li>
        <li>
          <% if controller_name == 'avalon_items' && action_name == 'index' %>
            <%= link_to "Avalon Items", avalon_items_path, "aria-current":"page" %>
          <% else %>
            <%= link_to link_to "Avalon Items", avalon_items_path %>
          <% end %>
        </li>
        <li>
          <% if controller_name == 'user' &&  action_name == 'index' %>
            <%= link_to "Users", users_path, "aria-current":'page' %>
          <% else %>
            <%= link_to "Users", users_path %>
          <% end %>
        </li>
        <li>
          <% if controller_name == 'atom_feed_reader' && action_name == 'index' %>
            <%= link_to 'Atom Feed', atom_feed_tester_path, "aria-current":'page' %>
          <% else %>
            <%= link_to "Atom Feed", atom_feed_tester_path %>
          <% end %>
        </li>
      </ul>
    </nav>
    <div class="rvt-header-id">
      <div class="rvt-dropdown">
        <button type="button" class="rvt-header-id__profile rvt-header-id__profile--has-dropdown rvt-dropdown__toggle" data-dropdown-toggle="id-dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="rvt-header-id__user"><%= User.current_username %></span>
          <svg aria-hidden="true" class="rvt-m-left-xs" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
            <path fill="currentColor" d="M8,12.46a2,2,0,0,1-1.52-.7L1.24,5.65a1,1,0,1,1,1.52-1.3L8,10.46l5.24-6.11a1,1,0,0,1,1.52,1.3L9.52,11.76A2,2,0,0,1,8,12.46Z"></path>
          </svg>
        </button>
        <div class="rvt-dropdown__menu rvt-header-id__menu" id="id-dropdown" aria-hidden="true">
          <div role="group" aria-label="User actions">
            <%= link_to "Log Out", signout_path, method: :delete %>
          </div>
        </div>
      </div>
    </div>
    <button type="button" class="rvt-drawer-button" aria-haspopup="true" aria-expanded="false" data-drawer-toggle="mobile-drawer-2">
      <span class="sr-only">Toggle menu</span>
      <svg aria-hidden="true" class="rvt-drawer-button-open" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <g fill="currentColor">
          <path d="M15,3H1A1,1,0,0,1,1,1H15a1,1,0,0,1,0,2Z"></path>
          <path d="M15,9H1A1,1,0,0,1,1,7H15a1,1,0,0,1,0,2Z"></path>
          <path d="M15,15H1a1,1,0,0,1,0-2H15a1,1,0,0,1,0,2Z"></path>
        </g>
      </svg>
      <svg aria-hidden="true" class="rvt-drawer-button-close" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
        <path fill="currentColor" d="M9.41,8l5.29-5.29a1,1,0,0,0-1.41-1.41L8,6.59,2.71,1.29A1,1,0,0,0,1.29,2.71L6.59,8,1.29,13.29a1,1,0,1,0,1.41,1.41L8,9.41l5.29,5.29a1,1,0,0,0,1.41-1.41Z"></path>
      </svg>
    </button>
  </div>
</header>